{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["prettier", "standard"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["warn", "always"],
    "space-before-function-paren": "off",
    "quotes": ["error", "double", { "avoidEscape": true }],
    "no-unused-vars": ["error", { "varsIgnorePattern": "^_" }]
  }
}
